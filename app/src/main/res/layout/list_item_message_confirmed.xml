<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/item_main"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<TextView
		android:id="@+id/label_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/margin_x_small"
		android:layout_marginLeft="@dimen/margin_small"
		android:layout_marginRight="@dimen/margin_small"
		android:textSize="@dimen/text_size_extra_small"
		/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<!--Info left-->
		<TextView
			android:id="@+id/label_info_left"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/margin_small"
			android:paddingRight="@dimen/margin_small"
			android:textSize="@dimen/text_size_extra_small"
			android:visibility="invisible"
			/>
		<!--Message item-->
		<LinearLayout
			android:id="@+id/panel_message"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			android:layout_marginBottom="@dimen/margin_small"
			android:orientation="vertical"
			android:padding="@dimen/default_side_padding"
			>

			<TextView
				android:id="@+id/label_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:textIsSelectable="false"
				android:textSize="@dimen/text_size_medium"
				/>

			<TextView
				android:id="@+id/label_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:textSize="@dimen/text_size_medium"
				android:maxLines="1"
				android:singleLine="true"
				android:ellipsize="none"
				/>
		</LinearLayout>
		<!--Info right-->
		<TextView
			android:id="@+id/label_info_right"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/margin_small"
			android:paddingRight="@dimen/margin_small"
			android:textSize="@dimen/text_size_extra_small"
			android:visibility="invisible"
			/>
	</LinearLayout>

</LinearLayout>
