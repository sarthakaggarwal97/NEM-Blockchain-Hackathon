<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/popup_content_top_padding"
	android:orientation="vertical"
	android:background="@drawable/shape_popup_content"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<org.nem.nac.ui.controls.PasswordInput
		android:id="@+id/input_password"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		style="@style/AppTheme.InputGroupInputBorderless"
		android:textColor="@color/default_black"
		android:inputType="textPassword"
		/>

	<CheckBox
		android:id="@+id/checkbox_use_app_password"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_small"
		android:layout_marginBottom="@dimen/margin_small"
		android:checked="false"
		android:text="@string/label_checkbox_use_app_password"
		android:textColor="@color/official_gray"
		android:button="@drawable/checkbox"
		/>
</LinearLayout>
